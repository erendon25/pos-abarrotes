{
  "name": "pos-abarrotes",
  "version": "1.1.2",
  "author": "Erick Rendon",
  "description": "Punto de venta moderno para tienda de abarrotes",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron .\"",
    "electron:build": "cross-env ELECTRON_BUILDER_CACHE=./.cache CSC_IDENTITY_AUTO_DISCOVERY=false vite build && electron-builder"
  },
  "build": {
    "appId": "com.posabarrotes.app",
    "directories": {
      "output": "dist_installer"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "POS Abarrotes",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.png",
      "verifyUpdateCodeSignature": false,
      "forceCodeSigning": false
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "erendon25",
        "repo": "pos-abarrotes"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erendon25/pos-abarrotes.git"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "firebase": "^12.7.0",
    "html5-qrcode": "^2.3.8",
    "jspdf": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "firebase-admin": "^13.6.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "wait-on": "^9.0.3"
  }
}